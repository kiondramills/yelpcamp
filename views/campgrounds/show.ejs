<% include ../partials/header %>



<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">
                 <img class="img-responsive" src="<%= campground.image %>">
                <div class="captain-full" id="cap">
                    <h4 class="pull-right">$9.00 per night</h4>
                     <h4><a><%= campground.name %></a></h4>
                     <h4><em>Posted by <%= campground.author.username %></em></h4>
                     <p><%= campground.description %></p>
                      <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                      <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                          <button class="btn btn-danger">DELETE</button>
                      </form>
                     
                </div>
            </div>
           
           <div class="well">
               <div class="text-right">
                   <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add Comments</a>
               </div>
               <hr>
               <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <span><strong><%= comment.author.username %></strong></span>
                            <span class="pull-right">5 days ago</span>
                        </div>
                        <p id="capText"> 
                            <%= comment.text %>
                        </p>
                        
                    </div>
                  
                 
                <% }) %>
           </div> 
        </div>
        
    </div>
    
</div>


<% include ../partials/footer %>